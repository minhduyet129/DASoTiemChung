@{

    var submitUrl = Model.MaBenhLy==0 ? Url.RouteUrl(TienSuBenhLyController.RouteCreate) : Url.RouteUrl(TienSuBenhLyController.RouteUpdate, new { id = Model.MaBenhLy });
    var submitMethod = Model.MaBenhLy==0 ? "POST" : "PUT";
}
<div class="modal-header">
    <h5 class="modal-title">@(Model.MaBenhLy==0 ? "Thêm mới" : "Sửa") Bệnh lý</h5>
    @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>*@
</div>
<div class="modal-body">
    <form id="detailsForm"
          class="row g-3"
          onsubmit="event.preventDefault(); saveForm.call(this, { url: '@Html.Raw(submitUrl)', method: '@Html.Raw(submitMethod)' });">
        <div class="form-group d-none">
            <label for="pcId">Id</label>
            <input type="text" readonly class="form-control" id="pcId" name="@Html.NameFor(x => x.MaBenhLy)" placeholder="" value="@Html.Raw(Model.MaBenhLy==0 ? 0 : Model.MaBenhLy)" />
        </div>
        <div class="form-group">
            <label for="pcName">Tên bệnh lý</label>
            <input type="text" class="form-control" id="pcName" name="@Html.NameFor(x => x.TenBenhLy)" placeholder="Tên bệnh lý" value="@Model.TenBenhLy">
        </div>
        


    </form>
</div>
<div class="modal-footer">
    <button type="submit" class="btn btn-primary" form="detailsForm">Lưu</button>
    <button type="button" class="btn btn-secondary" @*data-bs-dismiss="modal"*@ onclick="closeForm()">Đóng</button>
</div>