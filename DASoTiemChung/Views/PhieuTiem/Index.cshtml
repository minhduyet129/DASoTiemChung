            //search vacxin theo lo

             $.ajax({
                url: `@Url.RouteUrl(VacXinTheoLoController.RouteDataJson)`,
                method: "GET",
                data: {
                    MaKho: $.trim($("#pcDiemTiem").val()).length > 0 ? $.trim($("#pcDiemTiem").val()) : "",
                },
                beforeSend: () => {
                    //$detailModal.FLoading("show");
                    //$detailModal.find(".modal-body").empty().append("Đang tải dữ liệu...");
                },
                success: (result) => {

                    let contentVacXin = '<option value="">Chọn vắc xin</option>';
                    for (let item of result) {
                        contentVacXin += `<option value=${item.maVacXinTheoLo} >${item.tenVacXinTheoLo}</option>`;
                    }
                     $("#pcVacXin").empty().append(contentVacXin);
                    console.log(result);



                },
                error: (jqXHR, textStatus, errorThrown) => {
                    let error = { message: "Đã có lỗi xảy ra, vui lòng liên hệ quản trị!" };
                    if ($.trim(jqXHR.responseText).length > 0) {
