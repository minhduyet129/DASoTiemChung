                });
                return;
            }
            if (!$("#pcThoiGianTiem").val()) {
                Swal.fire({
                    icon: 'error',
                    title: 'Ôi không...',
                    text: 'Vui lòng chọn thời gian tiêm',
                    //footer: '<a href="javascript:;">Why do I have this issue?</a>'
                });
                return;
            }
            if (!$("#pcNhanVien").val()) {
                Swal.fire({
                    icon: 'error',
                    title: 'Ôi không...',
                    text: 'Vui lòng chọn nhân viên',
